<!-- 类写好之后完成相应的配置，首先页面提交过来之后，需要经过Struts.xml，所在在struts.xml 中完成action的配置 -->
<struts>
<!--  第二种整合的方式  <package name="begin03" extends="struts-default" namespace="/">
<action name="product_*" class="productAction" method={1}></action>
</package> -->
<!-- action交由struts自己去创建 -->
<package name="ssh_employee" extends="struts-default" namespace="/">
<!-- 配置action的标签 -->
<action name="employee_*" class="employeeAction" method="{1}">
<result name="input">/index.jsp</result>
<result name="register">/jsp/Employee/register.jsp</result>
<result name="success" type="redirect">/library_findLi.action</result>
<result name="saveSuccess" type="redirect">employee_findAll.action</result>
<result name="findAll">/jsp/Employee/listEmployee.jsp </result>
<result name="saveUI">/jsp/Employee/add.jsp </result>
<result name="editSuccess">/jsp/Employee/edit.jsp </result>
<result name="updateSuccess" type="redirect">employee_findAll.action </result>
<result name="deleteSuccess" type="redirect">employee_findAll.action </result>
</action>  

 <action name="library_*" class="libraryAction" method="{1}">
 <result name="show">/frame.jsp</result>
 </action>
 
 <action name="device_*" class="deviceAction" method="{1}">
 <result name="findByDid">/jsp/Device/listDevice.jsp</result>
 </action>
 <action name="electricity_*" class="electricityAction" method="{1}">
 <result name="findByElid">/jsp/Electricity/showElectricity.jsp</result>
 </action>
